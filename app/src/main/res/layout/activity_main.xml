<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_netology_48"

        />

    <TextView

        android:id="@+id/text_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Привет!Это Нетология!Трали вали мы на "
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView_more"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView_icon"
        app:layout_constraintTop_toTopOf="@+id/imageView_icon" />

    <TextView
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="22.04.2022"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/imageView_icon"
        app:layout_constraintTop_toBottomOf="@+id/text_title" />

    <ImageView
        android:id="@+id/imageView_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_more_24" />

    <TextView
        android:id="@+id/text_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Контент"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barrier_title" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="imageView_icon" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="text_content" />

    <ImageView
        android:id="@+id/image_like"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/text_content"
        app:layout_constraintTop_toBottomOf="@+id/barrier_content"
        app:srcCompat="@drawable/ic_like_false_24" />

    <TextView
        android:id="@+id/text_likes_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="118"
        app:layout_constraintBottom_toBottomOf="@+id/image_like"
        app:layout_constraintStart_toEndOf="@+id/image_like"
        app:layout_constraintTop_toTopOf="@+id/image_like" />

    <ImageView
        android:id="@+id/image_share"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_likes_count"
        app:layout_constraintStart_toEndOf="@+id/text_likes_count"
        app:layout_constraintTop_toTopOf="@+id/text_likes_count"
        app:srcCompat="@drawable/ic_share_24" />

    <TextView
        android:id="@+id/text_share_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="122"
        app:layout_constraintBottom_toBottomOf="@+id/image_share"
        app:layout_constraintStart_toEndOf="@+id/image_share"
        app:layout_constraintTop_toTopOf="@+id/image_share" />

    <ImageView
        android:id="@+id/image_shows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/text_shows_count"
        app:layout_constraintTop_toBottomOf="@id/barrier_content"
        app:srcCompat="@drawable/ic_shows_24" />

    <TextView
        android:id="@+id/text_shows_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="22"
        app:layout_constraintBottom_toBottomOf="@+id/image_shows"
        app:layout_constraintEnd_toEndOf="@id/imageView_more"
        app:layout_constraintTop_toBottomOf="@id/barrier_content" />

</androidx.constraintlayout.widget.ConstraintLayout>